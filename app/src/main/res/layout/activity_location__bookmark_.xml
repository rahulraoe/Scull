<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Location_Bookmark_Activity">



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Location_Recycler"
        android:layout_margin="3sp"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </androidx.recyclerview.widget.RecyclerView>


    <RelativeLayout
        android:id="@+id/Rel_Location"
        android:layout_width="match_parent"

        android:layout_centerInParent="true"
        android:layout_height="wrap_content">

        <ProgressBar
            android:id="@+id/Progress_Bar_My_Groups"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.8"
            android:layout_centerInParent="true"/>
        <TextView
            android:layout_below="@+id/Progress_Bar_My_Groups"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60sp"
            android:layout_centerHorizontal="true"
            android:lineSpacingMultiplier="1.1"
            android:layout_marginLeft="20sp"
            android:text="Some places are worth remembering..."
            android:fontFamily="@font/montserrat"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Rel_Group_Gallery_no"
        android:layout_width="match_parent"

        android:layout_centerInParent="true"
        android:layout_height="wrap_content">


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60sp"
            android:layout_centerHorizontal="true"
            android:lineSpacingMultiplier="1.1"
            android:layout_marginLeft="20sp"

            android:text="You dont have any Location Bookmarks..."
            android:fontFamily="@font/montserrat"
            />

    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"

        android:id="@+id/Location_Bookmark"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30sp"


        android:layout_width="90sp"
        android:alpha="0.8"
        android:layout_height="90sp"

        />

</RelativeLayout>